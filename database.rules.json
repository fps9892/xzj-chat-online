{
  "rules": {
    ".read": true,
    ".write": true,
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid || data.child('isGuest').val() == true",
        ".write": "auth != null && auth.uid == $uid || data.child('isGuest').val() == true || newData.child('isGuest').val() == true"
      }
    },
    "messages": {
      ".read": true,
      "$messageId": {
        ".write": "auth != null || newData.child('isGuest').val() == true"
      }
    },
    "rooms": {
      ".read": true,
      ".write": "auth != null"
    },
    "admins": {
      ".read": "auth != null",
      ".write": "root.child('admins').child(auth.uid).exists()"
    },
    "moderators": {
      ".read": "auth != null",
      ".write": "root.child('admins').child(auth.uid).exists()"
    },
    "banned": {
      ".read": "root.child('admins').child(auth.uid).exists() || root.child('moderators').child(auth.uid).exists()",
      ".write": "root.child('admins').child(auth.uid).exists() || root.child('moderators').child(auth.uid).exists()"
    }
  }
}