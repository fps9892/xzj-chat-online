rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario es administrador
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Colección de administradores - solo admins pueden leer/escribir
    match /admins/{firebaseUid} {
      allow read, write: if isAdmin();
      // Permitir que un usuario lea su propio estado de admin
      allow read: if request.auth.uid == firebaseUid;
    }
    
    // Colección de usuarios - acceso basado en autenticación
    match /users/{firebaseUid} {
      // Los usuarios pueden leer y escribir sus propios datos
      allow read, write: if request.auth.uid == firebaseUid;
      // Los admins pueden leer todos los usuarios
      allow read: if isAdmin();
      // Los admins pueden escribir datos de otros usuarios
      allow write: if isAdmin();
    }
    
    // Colección de mensajes - acceso público para lectura, autenticado para escritura
    match /messages/{messageId} {
      allow read: if true; // Todos pueden leer mensajes
      allow create: if isAuthenticated(); // Solo usuarios autenticados pueden crear
      allow update, delete: if isAuthenticated() && 
        (request.auth.uid == resource.data.firebaseUid || isAdmin());
    }
    
    // Colección de salas/rooms - acceso público para lectura
    match /rooms/{roomId} {
      allow read: if true;
      allow write: if isAdmin(); // Solo admins pueden modificar salas
    }
    
    // Cualquier otra colección - solo admins tienen acceso completo
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}